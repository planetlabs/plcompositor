{
    "$schema": "http://json-schema.org/draft-03/schema#",
    "title": "PLCompositor Schema",
    "type": "object",
    "additionalProperties": false,
    "properties": {
	"output_file": {
	    "type": "string",
	    "required": true
	},
	"source_trace": {
	    "type": "string"
	},
	"quality_output": {
	    "type": "string"
	},
	"average_best_ratio": {
	    "type": "number"
	},
	"source_sieve_threshold": {
	    "type": "number"
	},
	"compositors": {
	    "type": "array",
	    "required": true,
	    "items": {
		"type": "object",
		"properties": {
		    "class": {
			"type": "string",
			"required": true,
			"enum": ["scene_measure", "darkest", "greenest",
				 "landsat8", "percentile", "qualityfromfile",
				 "samesource", "reddest"]
		    }
		}
	    }
	},
	"inputs": {
	    "type": "array",
	    "required": true,
	    "items": {
		"type": "object",
		"properties": {
		    "filename": {
			"type": "string",
			"required": true
		    },
		},
	    }
	}
    },
    "required": true
}
